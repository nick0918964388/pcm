{
    "designSystemProfile": "Cathay Pacific - Digital Experience",
    "description": "A design system profile based on the Cathay Pacific website. It captures the clean, premium, and airy aesthetic, focusing on the brand's iconic green, ample white space, and soft UI elements.",
    "global": {
      "colors": {
        "brand": {
          "primary": "#00645A",
          "primaryDark": "#005048",
          "accent": "#2DC2AE"
        },
        "background": {
          "level0": "#FFFFFF",
          "level1": "#F5F5F5",
          "level2": "#E0E0E0"
        },
        "text": {
          "primary": "#1A1A1A",
          "secondary": "#595959",
          "tertiary": "#8C8C8C",
          "interactive": "#00645A",
          "onColor": "#FFFFFF",
          "error": "#D93025"
        },
        "ui": {
          "border": "#D9D9D9",
          "divider": "#F0F0F0",
          "focus": "#00645A"
        },
        "support": {
          "error": "#D93025",
          "warning": "#FAA91A",
          "success": "#1E8E3E"
        }
      },
      "layout": {
        "borderRadius": "4px",
        "shadows": {
          "subtle": "0 2px 8px rgba(0,0,0,0.06)",
          "medium": "0 4px 12px rgba(0,0,0,0.1)"
        }
      }
    },
    "elementStyling": {
      "page": {
        "background": "$global.colors.background.level0",
        "color": "$global.colors.text.primary"
      },
      "typography": {
        "heading": {
          "color": "$global.colors.text.primary",
          "fontWeight": "700"
        },
        "body": {
          "color": "$global.colors.text.secondary"
        },
        "links": {
          "default": {
            "color": "$global.colors.text.interactive",
            "textDecoration": "none",
            "fontWeight": "500"
          },
          "hover": {
            "textDecoration": "underline"
          }
        }
      },
      "buttons": {
        "primary": {
          "default": {
            "background": "$global.colors.brand.primary",
            "text": "$global.colors.text.onColor",
            "border": "none",
            "borderRadius": "$global.layout.borderRadius",
            "fontWeight": "700"
          },
          "hover": {
            "background": "$global.colors.brand.primaryDark"
          }
        },
        "secondary": {
          "default": {
            "background": "$global.colors.background.level0",
            "text": "$global.colors.brand.primary",
            "border": "1px solid $global.colors.brand.primary",
            "borderRadius": "$global.layout.borderRadius",
            "fontWeight": "700"
          },
          "hover": {
            "background": "rgba(0, 100, 90, 0.05)"
          }
        },
        "tertiary": {
          "default": {
            "background": "transparent",
            "text": "$global.colors.brand.primary",
            "border": "none"
          },
          "hover": {
            "textDecoration": "underline"
          }
        }
      },
      "cards": {
        "container": {
          "background": "$global.colors.background.level0",
          "border": "1px solid $global.colors.ui.divider",
          "borderRadius": "$global.layout.borderRadius",
          "shadow": "$global.layout.shadows.subtle"
        },
        "interactiveHover": {
          "shadow": "$global.layout.shadows.medium",
          "transform": "translateY(-2px)"
        }
      },
      "inputFields": {
        "all": {
          "borderRadius": "$global.layout.borderRadius"
        },
        "text": {
          "default": {
            "background": "$global.colors.background.level0",
            "text": "$global.colors.text.primary",
            "border": "1px solid $global.colors.ui.border"
          },
          "focus": {
            "border": "1px solid $global.colors.ui.focus",
            "boxShadow": "0 0 0 2px rgba(0, 100, 90, 0.2)"
          },
          "error": {
            "border": "1px solid $global.colors.support.error",
            "boxShadow": "0 0 0 2px rgba(217, 48, 37, 0.2)"
          }
        },
        "label": {
          "color": "$global.colors.text.secondary",
          "fontWeight": "500"
        }
      },
      "navigation": {
        "header": {
          "background": "$global.colors.background.level0",
          "borderBottom": "1px solid $global.colors.ui.divider"
        },
        "navLink": {
          "default": {
            "color": "$global.colors.text.primary",
            "fontWeight": "500"
          },
          "hover": {
            "color": "$global.colors.brand.primary"
          },
          "active": {
            "color": "$global.colors.brand.primary",
            "boxShadow": "inset 0 -2px 0 0 $global.colors.brand.primary"
          }
        }
      },
      "tabs": {
        "container": {
          "borderBottom": "1px solid $global.colors.ui.border"
        },
        "tab": {
          "default": {
            "color": "$global.colors.text.secondary"
          },
          "active": {
            "color": "$global.colors.brand.primary",
            "borderBottom": "2px solid $global.colors.brand.primary"
          },
          "hover": {
            "background": "$global.colors.background.level1"
          }
        }
      }
    },
    "applicationRules": {
      "doNot": [
        "DO NOT use dark themes or large areas of dark color for page backgrounds. The aesthetic is light and airy.",
        "DO NOT use sharp corners (0px radius) on primary interactive elements like buttons and cards. A subtle border-radius is key to the soft, modern feel.",
        "DO NOT use gradients for backgrounds or UI elements. The design relies on clean, solid colors.",
        "DO NOT use aggressive or heavy shadows. Shadows should be subtle to gently lift elements from the background.",
        "DO NOT use the accent color (#2DC2AE) for primary actions like 'Book now'. It should be reserved for secondary highlights or promotional tags."
      ]
    }
  }