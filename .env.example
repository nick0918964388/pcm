# PCM Photo Management System - Environment Configuration
# Copy this file to .env and fill in your values

# Application Settings
SECRET_KEY=your-secret-key-change-in-production-long-and-random
JWT_SECRET_KEY=jwt-secret-key-different-from-main-secret
DEBUG=True
APP_NAME="PCM Photo Management System"

# Database Configuration
DATABASE_TYPE=oracle

# Oracle Settings
ORACLE_HOST=localhost
ORACLE_PORT=1521
ORACLE_USER=system
ORACLE_PASSWORD=your_password
ORACLE_DATABASE=pcm_db
ORACLE_SERVICE_NAME=XEPDB1

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# File Upload Configuration
UPLOAD_PATH=./uploads
THUMBNAIL_PATH=./thumbnails
MAX_FILE_SIZE=10485760  # 10MB in bytes
ALLOWED_EXTENSIONS=jpg,jpeg,png,gif,bmp,tiff,webp

# CORS Configuration
BACKEND_CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# API Configuration
API_PORT=8000
API_HOST=0.0.0.0

# Frontend Configuration
VITE_API_URL=http://localhost:8000
REACT_APP_API_URL=http://localhost:8000
REACT_APP_UPLOAD_MAX_SIZE=10485760

# Development Settings
LOG_LEVEL=INFO
ENABLE_METRICS=True
METRICS_PORT=9090

# Cache Settings
CACHE_TTL_DEFAULT=300
CACHE_TTL_PHOTOS=1800
CACHE_TTL_ALBUMS=600

# Rate Limiting
RATE_LIMIT_ENABLED=True
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60